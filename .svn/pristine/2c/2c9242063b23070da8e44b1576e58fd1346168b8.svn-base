                               ng-model="batchallocations.Selected"  checklist-value="batchallocations" 
                                > 
                                <!--{{$index}}{{delreleases.releases}}
                        </td> --> 
                       
                       <td scope="row" title="'Application No'"  filter="{applicationNo: 'text'}" sortable="'applicationNo'" align="center">{{batchallocations.applicationNo}}</td>
                        <td scope="row" title="'Batch No'" filter="{batchAlias: 'text'}"  align="center">{{batchallocations.batchAlias}}<br />
                       </td>

                       
                     </tr>
                        
                 </table>                 
  
                </div>
            </div>

        </div>

    </div>

