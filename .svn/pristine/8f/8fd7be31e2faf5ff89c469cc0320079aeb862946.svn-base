<div class="container-fluid">

  
<div class="panel panel-default">
      <div class="panel-heading" >
        <h3 class="panel-title">
                 <div class="row">
                    <div class="col-xs-6" align="left"><h3>Role Modules - {{roleName}}</div>

                    
                </div>
        </h3>
      </div>
      <div class="panel-body">        
                <form class="form" role="form" ng-submit="submitRoleModule()" method="post" >

                <div class="alert alert-danger alert-dismissible fade in" role="alert" ng-if="!PERMISSION.READ && 1==2">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <strong>Error!</strong> You don't have permission to access this module.
                </div>

                <div >
                    <div class="form-group">
                        <label >Application</label>
                    <vc-ddl   
                    	sql='select *, name as displaylabel from coremenu where parentId = 0 ORDER BY priority ASC'
                    	whr='' tbl='0' dbval='menuId' dblbl='name' data-accessor="selectedApplication"  
                        vc-change='showModules()'
                        ></vc-ddl>
 
                    </div>    
                    <div class="form-group" ng-if="Modules.length > 0">
                    <fieldset >
                        <label>Modules </label><br />
                        
                        <label><input type="checkbox"  ng-click="selectAll()"  ng-model="rootEle.isChecked" /> Select All</label><br /><br />
                        
                        <div ng-repeat="module in Modules">
                          <label class="checkbox-inline col-md-2" >
                          	<input type="checkbox"  name="optradio" ng-model="module.isChecked" value="Male" >{{module.name}}                          
                          </label>
                        </div>
                    </fieldset>
                    </div>
                    
                     <div class="form-group">
                       
                        <button class="btn btn-lg btn-primary "  >Save</button>
                    </div>    
			    </div>
                 </form>
        
      </div>
    </div>


     



    <hr>

    <p class="small text-muted"><a href="#">VARA UNITED</a> | ALL RIGHTS RESERVED &copy; 2016</p>

  </div>